<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h2>Add Questions</h2>
	<a href="/Home">Back</a>
	<br/><br/>
	<form method="post">
		<table>
			<tr>
				<td>Subject</td>
				<td><input type="text" name="subject" /></td>
			</tr>
			<tr>
				<td>Question</td>
				<td><input type="text" name="question" /></td>
			</tr>
			<tr>
				<td>Option 1</td>
				<td><input type="text" name="option1" /></td>
			</tr>
			<tr>
				<td>Option 2</td>
				<td><input type="text" name="option2" /></td>
			</tr>
			<tr>
				<td>Correct Answer</td>
				<td><input type="text" name="canswer" /></td>
			</tr>
			<tr>
				<td></td>
				<td><input type="submit" value="Create" /></td>
			</tr>
		</table>
	</form>
	<br/><br/>
	<ul>
	<% errors.forEach(function(err){ %>
		<li><%= err.msg %></li>
	<% }) %>
	</ul>
</body>
</html>